{{#if logged}}
<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="jumbotron">
				<a href="/login"><button class="btn btn-primary init">Login</button></a>
				<a href="/register"><button class="btn btn-danger init">Register</button></a>
			</div>
		</div>
	</div>
</div>

{{else}}

<div class="row">
	<div class="col-md-3 col-md-offset-1">
		<a href="/NYU/{{user}}/createSub"><button class="btn btn-success">Create Subdomain</button></a>
		<a href="/logout/{{user}}"><button class="btn btn-danger">Logout</button></a><br><br>
		<div class="dropdown">
			<button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Join Subdomain
				<span class="caret"></span></button>
				<ul class="dropdown-menu">
					{{#each subs}}
						<li><a href="/joinSub/{{id}}/{{../user}}">{{name}}</a></li>
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
	<div class="col-md-6 col-md-offset-3">
		{{#each threads}}
			<div class="jumbotron">
				<div class="votes">
					<input type="image" class="upVoteThread voteButts" info="/voteThread/{{../user}}/{{id}}/1" id={{id}} src="/images/up.png" /><br>
					<span>{{points}}</span><br>
					<input type="image" class="downVoteThread voteButts" info="/voteThread/{{../user}}/{{id}}/-1" id={{id}} src="/images/down.png" /><br>
				</div>
				<div>
					<h2><u><a href="/NYU/{{name}}/{{subdomain_id}}/{{../user}}/{{id}}">{{title}}</a><br></u></h2>
					<h4>{{context}}</h4>
					<h5>Created by: <u>{{author}}</u> on {{date_posted}}</h5>
				</div>
			</div><br>
		{{/each}}
	</div>
</div>
{{/if}}
